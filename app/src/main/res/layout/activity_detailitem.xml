<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.accenturefeed.DetailItem"
        android:orientation="vertical"
        >

        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_item_title"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:background="#cb4695e9"
            android:textColor="#000"
            android:textSize="16dp"
          />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <TextView
            android:text="published on:"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="#cb4695e9"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_item_date"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"
            android:textSize="12dp"/>

        </LinearLayout>

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_item_desc"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#000000"/>


    </LinearLayout>
</ScrollView>